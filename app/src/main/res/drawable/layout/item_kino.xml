<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="kino"
        type="com.example.filimapp2.model.Data" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/kinoImage"
            load_image_resource="@{kino.poster_path}"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/kinoreyting"
            android:layout_width="34sp"
            android:layout_height="24sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="#E40F0F"
            android:text="@{kino.popularity.toString()}"
            android:textAlignment="center"
            android:textColor="#EBE6E6"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/kinoImage"
            app:layout_constraintTop_toTopOf="@+id/kinoImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>